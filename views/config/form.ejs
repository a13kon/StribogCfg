<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Наименование</label>
        <input type="text"
                value="<%= config.title %>"
                name="title"
                class="form-control"
                id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputAuthors">Авторы</label>
        <input type="text"
                value="<%= config.authors %>"
                name="authors"
                class="form-control"
                id="inputAuthors">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= config.description %></textarea>
    </div>

    <label>Вентиляторы</label>
    
        <div>
            <table width="100%" cellspacing="0" cellpadding="4">
                <tr>
                    <td width="600">С01 Использовать вытяжной вентилятор</td>
                    <td>
                        <% if (config.C02 == 'true') { %>
                            <input type="checkbox"
                            name="C01"
                            value="true"
                            id="checkBoxC01"
                            checked>
                        <% } else { %>
                            <input type="checkbox"
                            name="C01"
                            value="true"
                            id="checkBoxC01">
                        <% } %>
                    </td>
                </tr>
            </table>
        </div>

        <div>
            <table width="100%" cellspacing="0" cellpadding="4">
                <tr>
                    <td width="600">С02 Использовать датчик перепада давления</td>
                    <td>
                        <input type="checkbox"
                            name="C02"
                            value="true"
                            id="checkBoxC02">
                    </td>
                </tr>
            </table>
        </div>

<label>Нагреватели</label>        

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>